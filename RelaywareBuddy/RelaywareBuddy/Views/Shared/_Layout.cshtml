<!DOCTYPE html>
<html ng-app="RWBuddyApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/images/rwbuddyIcon.ico">
    <title>Relayware Buddy</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-fixed-top">
        <div class="container">
            @Html.ActionLink("Relayware Buddy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <div class="container body-content">
        <div class="row">
            <footer>
                <p>&copy; @DateTime.Now.Year - Relayware Buddy</p>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/RWBuddyApp.js"></script>
    <script src="~/Scripts/RWABuddyController.js"></script>
</body>
</html>